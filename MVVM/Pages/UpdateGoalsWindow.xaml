<Window x:Class="HealthTrackerMVVM.Pages.UpdateGoalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthTrackerMVVM.Pages"
        mc:Ignorable="d"
        Title="UpdateGoalsWindow" Height="450" Width="800" Background="Black">
    
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="🎯 Update Your Goals" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <TextBlock Text="Daily Calorie Goal (kcal)" Foreground="White" Margin="0 5"/>
            <TextBox x:Name="CalorieGoalBox"
                     Background="#2C2C2C"
                     Foreground="White"
                     FontSize="14"
                     Padding="8"
                     BorderThickness="0"/>

            <TextBlock Text="Water Goal (ml)" Foreground="White" Margin="0 10 0 5"/>
            <TextBox x:Name="WaterGoalBox"
                     Background="#2C2C2C"
                     Foreground="White"
                     FontSize="14"
                     Padding="8"
                     BorderThickness="0"/>

            <TextBlock Text="Steps Goal" Foreground="White" Margin="0 10 0 5"/>
            <TextBox x:Name="StepsGoalBox"
                     Background="#2C2C2C"
                     Foreground="White"
                     FontSize="14"
                     Padding="8"
                     BorderThickness="0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <Button Content="Save" 
                        Click="Save_Click" 
                        Width="100" 
                        Margin="5"
                        Background="#4CAF50" 
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"/>
                <Button Content="Cancel" 
                        Click="Cancel_Click" 
                        Width="100"
                        Margin="5"
                        Background="#F44336" 
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
    
</Window>
