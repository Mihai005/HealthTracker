<Page x:Class="HealthTrackerMVVM.Pages.GoalsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HealthTrackerMVVM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GoalsPage">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🎯 Set Your Daily Goals"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0 0 0 20"/>

        <Border Grid.Row="1"
                Background="#222"
                CornerRadius="12"
                Padding="30"
                BorderBrush="#444"
                BorderThickness="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <StackPanel>
                    <TextBlock Text="Daily Calorie Goal" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0 0 0 5"/>
                    <TextBox x:Name="CalorieGoalBox"
                             FontSize="14"
                             Background="#333"
                             Foreground="White"
                             BorderBrush="#555"
                             BorderThickness="1"
                             Padding="8"
                             />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Water Goal (ml)" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0 0 0 5"/>
                    <TextBox x:Name="WaterGoalBox"
                             FontSize="14"
                             Background="#333"
                             Foreground="White"
                             BorderBrush="#555"
                             BorderThickness="1"
                             Padding="8"
                             />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Steps Goal" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0 0 0 5"/>
                    <TextBox x:Name="StepsGoalBox"
                             FontSize="14"
                             Background="#333"
                             Foreground="White"
                             BorderBrush="#555"
                             BorderThickness="1"
                             Padding="8"
                             />
                </StackPanel>

                <Button Content="Save Goals"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        Padding="10"
                        Margin="0 20 0 0"
                        BorderThickness="0"
                        Click="SaveGoals_Click"/>
            </StackPanel>
        </Border>
    </Grid>
    
</Page>
