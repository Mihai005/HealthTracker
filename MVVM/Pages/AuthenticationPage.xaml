<Page x:Class="HealthTrackerMVVM.Pages.AuthenticationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="using:HealthTrackerMVVM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthenticationPage" Foreground="White">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to Health Tracker"
               FontSize="26"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,20" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="Login"
                Content="Log In"
                Click="LogIn_Click"
                Background="#1E88E5"
                Foreground="White"
                FontWeight="SemiBold"
                Padding="12,6"
                Width="140"
                Margin="0,0,10,0"
                BorderThickness="0"
                />

                <Button x:Name="Signup"
                Content="Sign Up"
                Click="SignUp_Click"
                Background="#43A047"
                Foreground="White"
                FontWeight="SemiBold"
                Padding="12,6"
                Width="140"
                BorderThickness="0"
                />
            </StackPanel>
        </StackPanel>
    </Grid>
    
</Page>